{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
      "hapi",
      "jsdoc"
    ],
    "rules": {
      "valid-jsdoc": [
        "error"
      ],
      "hapi/hapi-capitalize-modules": [
        "error"
      ]
    }
}
